# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/recipe-book
DB_CONNECTION_POOL_MIN=10
DB_CONNECTION_POOL_MAX=50

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# Admin User Credentials (for migration)
ADMIN_EMAIL=admin@recipebook.local
ADMIN_PASSWORD=admin123

# Email Configuration
# Options: 'console' (development), 'ethereal' (testing), 'sendgrid' (production), 'ses' (production)
EMAIL_SERVICE=console
EMAIL_FROM=noreply@recipebook.com
FRONTEND_URL=http://localhost:5173

# Ethereal Email (for testing - auto-generated if not provided)
# ETHEREAL_USER=
# ETHEREAL_PASS=

# SendGrid (production)
# SENDGRID_API_KEY=your-sendgrid-api-key

# AWS SES (production)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# Redis Configuration (optional - app works without Redis)
REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password
REDIS_KEY_PREFIX=recipe-book:

# Logging Configuration
LOG_LEVEL=info
# Options: error, warn, info, http, debug
ENABLE_FILE_LOGGING=false
ENABLE_CONSOLE_LOGGING=true
LOG_FILE_PATH=./logs
LOG_DATE_PATTERN=YYYY-MM-DD
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Performance & Infrastructure
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6
SHUTDOWN_TIMEOUT=30000

# OpenTelemetry (optional - for distributed tracing)
# OTEL_ENABLED=false
# OTEL_SERVICE_NAME=recipe-book-api
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
# OTEL_EXPORTER_OTLP_HEADERS=

# Cloud Backup Configuration
# Dropbox OAuth
DROPBOX_CLIENT_ID=your-dropbox-app-key
DROPBOX_CLIENT_SECRET=your-dropbox-app-secret
DROPBOX_REDIRECT_URI=http://localhost:5000/api/cloud/dropbox/callback

# Google Drive OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/cloud/google/callback

# Token Encryption (CRITICAL: Must be 32 bytes hex - generate with: openssl rand -hex 32)
CLOUD_TOKEN_ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Backup Settings
MAX_BACKUP_SIZE_MB=50
BACKUP_RETENTION_DAYS=30
