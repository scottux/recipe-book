{
  "name": "recipe-book",
  "version": "2.2.3",
  "description": "Recipe book application - monorepo root",
  "private": true,
  "scripts": {
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && eslint \"src/**/*.js\"",
    "lint:frontend": "cd frontend && eslint \"src/**/*.{js,jsx}\"",
    "lint:fix": "npm run lint:fix:backend && npm run lint:fix:frontend",
    "lint:fix:backend": "cd backend && eslint \"src/**/*.js\" --fix",
    "lint:fix:frontend": "cd frontend && eslint \"src/**/*.{js,jsx}\" --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,md,css}\"",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:coverage": "npm run test:coverage:backend && npm run test:coverage:frontend",
    "test:coverage:backend": "cd backend && npm run test:coverage",
    "test:coverage:frontend": "cd frontend && npm run test:coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:report": "playwright show-report"
  },
  "keywords": [
    "recipe",
    "cookbook",
    "monorepo"
  ],
  "author": "Recipe Book Contributors",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "prettier": "^3.4.2"
  }
}
